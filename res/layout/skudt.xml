<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1" android:textAlignment="center"
        >

    <ImageView
            android:layout_width="180dp"
            android:layout_height="172dp"
            android:id="@+id/imageView"
            android:background="@drawable/skull" android:layout_gravity="center_horizontal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" android:text="@string/youdied" android:layout_gravity="center"
            android:textSize="25sp" android:id="@+id/youdied"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="46dp" android:layout_gravity="bottom" android:layout_weight="1">
    </LinearLayout>
    <Button
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="@string/tryagain"
            android:typeface="serif"
            android:textStyle="bold"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"


            android:layout_marginBottom="10dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </LinearLayout>
</LinearLayout>