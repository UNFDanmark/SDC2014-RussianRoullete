<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:weightSum="1" android:id="@+id/parentScreen"
              android:background="@drawable/realflames2">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title"
            android:id="@+id/title"
            android:singleLine="true"

            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"

            android:typeface="serif"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textIsSelectable="false"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="1" android:id="@+id/mainScreen">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:background="@drawable/chamber_empty"
                    android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom">
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reload"
                android:id="@+id/buttonReload"
                android:layout_gravity="right"
                android:typeface="serif"
                android:textStyle="bold"
                android:background="@drawable/button"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#fff"
                android:layout_weight="1"
                />
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/fire"
                android:id="@+id/buttonFire"
                android:layout_gravity="right"
                android:typeface="serif"
                android:textStyle="bold"
                android:background="@drawable/button"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#fff"
                android:layout_weight="2"
                />

    </LinearLayout>
</LinearLayout>
